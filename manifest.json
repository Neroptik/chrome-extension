{
    "manifest_version": 2,
    "name": "__MSG_name__",
    "version": "3.0.2",
    "default_locale": "en",
    "description": "__MSG_description__",
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "browser_action": {
        "default_icon": "img/icon48.png"
    },
    "background": {
        "scripts": [
            "js/qwant.js"
        ]
    },
    "chrome_settings_overrides": {
        "homepage": "https://www.qwant.com/?client=qwant-chrome",
        "search_provider": {
            "name": "Qwant.com",
            "keyword": "qwant.com",
            "search_url": "https://www.qwant.com/?q={searchTerms}&client=qwant-chrome",
            "favicon_url": "https://www.qwant.com/favicon.ico",
            "suggest_url": "https://api.qwant.com/api/suggest/?q={searchTerms}&client=qwant-chrome",
            "image_url": "https://www.qwant.com/?q={searchTerms}&t=images&client=qwant-chrome",
            "encoding": "UTF-8",
            "is_default": true
        }
    },
    "omnibox": {
        "keyword": "q"
    },
    "permissions": [
        "contextMenus"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.qwant.com/*"
            ],
            "css": [
                "css/no-popin.css"
            ]
        }
    ]
}
